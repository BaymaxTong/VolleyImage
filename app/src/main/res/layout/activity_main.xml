<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginStart="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gif_image"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/image1"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/image2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/image3"
        android:layout_alignStart="@+id/image4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/circle_image"
        android:layout_marginStart="220dp"
        android:layout_below="@+id/image2"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/image3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/image1"
        android:layout_alignStart="@+id/image1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/original_image"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/image3"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/image4"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="0dp"
        android:layout_marginStart="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beauty_image"
        android:layout_marginStart="220dp"
        android:layout_below="@+id/image4"
        android:textSize="25sp"/>

</RelativeLayout>
